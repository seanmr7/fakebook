<div class="container-fluid">
  <div class="row mt-3">
    <div class="col-md-6 ps-5">
      <h1>Welcome to Fakebook</h1>
      <h5>Fakebook is a Facebook clone with a large portion of Facebook's core functionality.<br>
          I'm Sean, I built this site to practice and learn more web development.<br>
          You can view my other projects by following the links below.
      </h5>
      <%= link_to "My github", "https://github.com/seanmr7" %> | <%= link_to "My personal blog", "http://www.sean-blog.com/" %>
      <% if user_signed_in? %>
        <%= link_to "sign out", destroy_user_session_path, method: :delete %>
      <% end %>
    </div>

    <% unless user_signed_in? %>
      <div class="col-md-6">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row mb-3">
            <%= f.label :first_name, class: "col-sm-2 col-form-label text-end" %>
            <div class="col-sm-8">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", class: "form-control" %>
            </div>
          </div>

          <div class="row mb-3">
            <%= f.label :last_name, class: "col-md-2 col-form-label text-end" %>
            <div class="col-sm-8">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", class: "form-control" %>
            </div>
          </div>

          <div class="row mb-3">
            <%= f.label :email, "Your email", class: "col-md-2 col-form-label text-end" %>
            <div class="col-sm-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>

          <div class="row mb-3">
            <%= f.label :password, class: "col-md-2 col-form-label text-end" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <div class="col-sm-8">
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>

          <div class="row mb-3">
            <%= f.label :password_confirmation, class: "col-md-2 col-form-label text-end" %>
            <div class="col-sm-8">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>

          <div class="row mb-3">
            <%= f.label :birthday, class: "col-md-2 col-form-label text-end" %>
            <div class="col-sm-8">
              <%= f.date_select :birthday, order: [:day, :month, :year], start_year: 1950, end_year: Date.today.year, class: "form-select" %>
            </div>
          </div>

          <div class="actions col-sm-10 text-center">
            <%= f.submit "Sign up", class: "btn btn-success" %>
          </div>
        <% end %>

      </div>
  <% end %>
  </div>
</div>