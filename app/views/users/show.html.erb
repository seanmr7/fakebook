<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 ps-5">
      <h3><%= @user.full_name %></h3>
      Profile picture<br>
      <% unless current_user.id == @user.id || is_friend?(@user.id) %>
        <%= link_to "Add Friend", user_friendships_path(user_id: @user.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
      <% @friends.each do |friend| %><br>
        <%= friend.full_name %>
      <% end %>
    </div>
    <div class="col-md-8 ps-5 pe-5">
      <h3>NEWS FEED</h3>
      <% if current_user.id == @user.id %>
        <%= render partial: "posts/form", object: @new_post, as: :post %>
      <% end %>
      <%= render partial: "posts/news_feed", object: @user.posts, as: :posts %>
    </div>
    <div class="col-md-2">
      <% if current_user == @user %>
        <h3>Notifications</h3>
        <h5>Friend Requests</h5>
        <% @user.recieved_requests.each do |request| %>
          <%= link_to request.full_name, request %>
          <%= link_to 'Accept', accept_friend_user_friendships_path(user_id: request), class: 'btn btn-success' %>
          <%= link_to 'Decline', decline_friend_user_friendships_path(user_id: request), class: 'btn btn-danger' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>